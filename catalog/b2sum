#!/bin/sh

NAME=${NAME:-'b2sum'}
VERSION=${VERSION:-'master'}
ORIGIN_PATH=${ORIGIN_PATH='BLAKE2/BLAKE2'}

CFLAGS='-Os -fPIC -msse2'

. ${INCLUDE}/functions

_build() {
    _clean && _make -C b2sum NO_OPENMP=1
}

_install() {
    mkdir -p ${COMMAND_DIR} ${DOC_DIR}/man1
    tar cf - -C b2sum b2sum | tar xf - -C ${COMMAND_DIR}
    tar cf - -C b2sum b2sum.1 | tar xf - -C ${DOC_DIR}/man1
}

_main ${@:-}
